<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascript %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <!--Main Navigation-->
        <header>
        <!-- Sidebar -->
        <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
            <div class="position-sticky">
            <div class="list-group list-group-flush mx-3 mt-4">
                <a href="#" class="list-group-item list-group-item-action py-2 ripple" aria-current="true">
                <i class="fas fa-solid fa-user me-3"></i><span>Mon profil</span></a>
                
                <a href="{{ path ("form_hab") }}" class="list-group-item list-group-item-action py-2 ripple">
                <i class="fas fa-solid fa-pen me-3"></i><span>Formulaire</span></a>
                
                <a href="{{ path ("tableau_bord") }}" class="list-group-item list-group-item-action py-2 ripple">
                    <i class="fas fa-solid fa-gauge me-3"></i><span>Tableau de bord</span></a>
                    
                <a href="{{ path ("app_logout") }}" class="list-group-item list-group-item-action py-2 ripple">
                    <i class="fas fa-solid fa-right-from-bracket me-3"></i><span>Se déconnecter</span></a>
                    
            </div>
            </div>
        </nav>
        
        <!-- Navbar -->
        <nav id="main-navbar" class="navbar navbar-dark bg-primary fixed-top">
            <!-- Container wrapper -->
            <div class="container-fluid">
            <!-- Brand -->
            <a id="site" class="navbar-brand" href="{{ path ("tableau_bord") }}"><p class="logo">SmileCare<p></a>
                
                <!-- Right links -->
            <ul class="navbar-nav ms-auto d-flex flex-row">
                <li class="msg">Bienvenue {{ app.user.prenom}} ! </li>
            </ul>

            <ul class="navbar-nav ms-auto d-flex flex-row">
                <li><a href="{{ path ("app_article") }}">Sais-tu ?</a></li>
                <li><a href="#">À propos</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
        </header>
        <!--Main Navigation-->
        
        <!--Main layout-->
        <main style="margin-top: 58px;">
        <div class="container pt-4"></div>
        </main>
        <!--Main layout-->
    </body>
</html>
        
{% block body %}
{% endblock %}
        