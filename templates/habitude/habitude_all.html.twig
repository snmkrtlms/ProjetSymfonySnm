{% extends "base.html.twig" %}

{% block body %}

<div class="contenu">
<h3>Historique des habitudes</h3>
{% for habitude in arrayObjetsHabitudes %}
    <ul>
        <li>{{ habitude.dateBrossage | date("d-m-Y") }}</li>
        <li>{{ habitude.nbBrossage }} </li>
        {% if habitude.nettLangue %}
            <li>Nettoyage de langue ok</li>
        {% else %}
            <li>Nettoyage de langue pas ok</li>
        {% endif %}
        {% if habitude.bainBouche %}
            <li>Bain de bouche ok</li>
        {% else %}
            <li>Bain de bouche pas ok</li>
        {% endif %}
        {% if habitude.filDentaire %}
            <li>Fil dentaire ok</li>
        {% else %}
            <li>Fil dentaire pas ok</li>
        {% endif %}
    </ul>
{% endfor %}
</div>


{# incruster vue partielle ici #}
<div id="vue_graphique">
{{ render (controller ('App\\Controller\\AfficheGraphiqueController::afficherGraphique')) }}
</div>


{# incruster vue partielle ici #}
<div id="vue_conseils">
{{ render (controller ('App\\Controller\\ConseilController::afficherConseils')) }}
</div>







{% endblock body %}